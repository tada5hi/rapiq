{
    "name": "@rapiq/codec",
    "version": "1.0.0",
    "description": "A package containing encoder & decoder",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist/"
    ],
    "dependencies": {
        "qs": "^6.14.0"
    },
    "devDependencies": {
        "@types/qs": "^6.14.0",
        "rapiq": "^1.0.0"
    },
    "peerDependencies": {
        "rapiq": "^1.0.0"
    },
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly -p tsconfig.build.json",
        "build:js": "rollup -c",
        "build": "rimraf dist && npm run build:types && npm run build:js",
        "commit": "npx git-cz",
        "test": "cross-env NODE_ENV=test jest --config ./test/jest.config.js",
        "test:coverage": "cross-env NODE_ENV=test jest --config ./test/jest.config.js --coverage",
        "lint": "eslint --ext .js,.ts ./src",
        "lint:fix": "npm run lint -- --fix",
        "prepublishOnly": "npm run build"
    },
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "license": "MIT",
    "keywords": [
        "query",
        "json",
        "json-api",
        "api",
        "rest",
        "api-utils",
        "include",
        "pagination",
        "sort",
        "fields",
        "filter",
        "relations",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Tada5hi/rapiq.git",
        "directory": "packages/codec"
    },
    "bugs": {
        "url": "https://github.com/Tada5hi/rapiq/issues"
    },
    "homepage": "https://github.com/Tada5hi/rapiq#readme"
}
